{
    "$schema": "https://schema.tauri.app/config/2",

    "identifier": "client.global-application",

    "build":
    {
        "frontendDist": "../dist",
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build"
    },
    "app":
    {
        "windows":
        [
            {
                "title": "GApp",
                "decorations": false,
                "maximizable": false,
                "alwaysOnTop": true,
                "fullscreen": false,
                "resizable": true,
                "center": true,
                "height": 700,
                "width": 360
            }
        ],
        "security":
        {
            "csp": null,
            "capabilities":
            [
                {
                    "identifier": "main-capability",
                    "windows":
                    [
                        "main"
                    ],
                    "permissions":
                    [
                        "core:app:allow-default-window-icon",

                        "core:window:allow-start-dragging",
                        "core:window:allow-unmaximize",
                        "core:window:allow-maximize",
                        "core:window:allow-minimize",
                        "core:window:allow-close",
                        "core:window:allow-hide",
                        "core:window:allow-show",

                        "core:menu:allow-new",

                        "core:tray:allow-new",

                        "store:allow-load",
                        "store:allow-save",
                        "store:allow-get",
                        "store:allow-set",

                        "os:allow-hostname",
                        "os:allow-platform",
                        "os:allow-os-type",
                        "os:allow-version",
                        "os:allow-family",
                        "os:allow-locale",
                        "os:allow-arch",

                        {
                            "identifier": "opener:allow-open-url",
                            "allow":
                            [
                                {
                                    "url": "https://*"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    },
    "bundle":
    {
        "active": true,
        "targets": "all",
        "icon":
        [
            "icons/icon.ico"
        ]
    }
}
