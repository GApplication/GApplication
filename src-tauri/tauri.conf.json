{
    "$schema": "https://schema.tauri.app/config/2",

    "identifier": "client.global-application",
    "productName": "global-application",
    "version": "1.0.0",

    "build":
    {
        "frontendDist": "../dist",
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build"
    },
    "app":
    {
        "windows":
        [
            {
                "title": "GApp",
                "width": 800,
                "height": 600
            }
        ],
        "security":
        {
            "csp": null
        }
    },
    "bundle":
    {
        "active": true,
        "targets": "all",
        "icon":
        [
            "icons/icon.ico"
        ]
    }
}